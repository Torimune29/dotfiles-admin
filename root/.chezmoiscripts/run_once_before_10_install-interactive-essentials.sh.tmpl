#!/usr/bin/env sh

set -eu

{{ if .requestInteractiveEssentials }}

{{- $repositorySpecific := dict
  "apt"     (cat "")
  "yum"     (cat "")
  "dnf"     (cat "")
  "zypper"  (cat "")
  "apk"     (cat "")
-}}

{{- $requestPackages := cat
  "bash"
  "procps"
  (get $repositorySpecific .packageManager)
-}}

{{ template "sudo" cat .install $requestPackages }}

{{ end }}
